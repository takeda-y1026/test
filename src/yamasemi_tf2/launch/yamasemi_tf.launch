<launch>

    <!--
     <node pkg="tf" type="static_transform_publisher" name=“tf_name" args=“x y z r p y base_link sensor
    100"/>​
     -->
  
    <node pkg="ypspur_ros" type="ypspur_ros" name="ypspur_ros">
      <param name="param_file"
        value="/home/takeda-y/researches/programs/platform/yp-robot-params/robot-params/speego.param" />
      <param name="port" value="/dev/serial/by-id/usb-T-frog_project_T-frog_Driver-if00" />
      <param name="cmd_vel_expire" value="5.0" />
    </node>
  
    <node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo_node" output="screen">
      <param name="port" value="/dev/serial/by-id/usb-Hokuyo_Data_Flex_for_USB_URG-Series_USB_Driver-if00" />
      <param name="angle_min" value="-1.5707963" />
      <param name="angle_max" value="1.5707963" />
    </node>
  
    <!-- You can adjust the pose of laser-rangefinder here. Order of values: x y z yaw pitch roll. -->
    <node pkg="yamasemi_tf2" type="laser_to_baselink" name="laser_transform"
      args="laser 0 0 0.2 0 0 0" />
      
    <node pkg="yamasemi_tf2" type="tf_listener" name="tf_listener"/>
  
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find yamasemi_tf2)/rviz/yamabico.rviz" />
  
    <!-- joycon -->
    <node pkg="joy" name="joy_node" type="joy_node"/>
    <node pkg="yamasemi_tf2" name="ControllerNode" type="joy_controller"/>
  
  </launch>